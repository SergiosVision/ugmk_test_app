{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@pages/*": ["./pages/*"],
      "@assets/*": ["./assets/*"],
      "@common/*": ["./common/*"],
      "@types/*": ["./types/*"],
      "@modules/*": ["./modules/*"],
      "@services/*": ["./services/*"],
      "@utils/*": ["./common/utils/*"],
      "@components/*": ["./common/components/*"]
    },

    /* Linting */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "include": ["src", "src/common/types"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
